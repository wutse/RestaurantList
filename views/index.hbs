<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
             width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <form action="/search">
    <div class="search-bar-outer">
      <div class="search-bar-inner">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
                 value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            <a class="btn btn-major" href="/restaurant/new"><i class="far fa-plus"></i></a>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row mb-3">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <div class="card mb-3">
          <a href="/restaurant/{{this._id}}"" class=" text-secondary">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </a>
          <div class="d-flex justify-content-end">
            <a class="mr-3" href="/restaurant/{{ this._id }}/edit">edit</a>
            <a class="mr-3" href="/restaurant/{{this._id}}">detail</a>
            <form action="/restaurant/{{ this._id }}/delete" method="POST" class="mr-3" style="display: inline;">
              <button type="submit">delete</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>